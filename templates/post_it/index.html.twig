{% extends 'base.html.twig' %}

{% block title %}PostIt index{% endblock %}

{% block body %}
    <h1>PostIt index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post_it in post_its %}
            <tr>
                <td>{{ post_it.id }}</td>
                <td>{{ post_it.title }}</td>
                <td>{{ post_it.content }}</td>
                <td>
                    <a href="{{ path('post_it_show', {'id': post_it.id}) }}">show</a>
                    <a href="{{ path('post_it_edit', {'id': post_it.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('post_it_new') }}">Create new</a>
{% endblock %}
